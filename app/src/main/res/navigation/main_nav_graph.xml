<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mapFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="ru.newlevel.hordemap.presentatin.fragments.MapFragment"
        android:label="MapFragment" >
        <action
            android:id="@+id/action_mapFragment_to_messengerDialogFragment"
            app:destination="@id/messengerDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/permissionRequestFragment"
        android:name="ru.newlevel.hordemap.presentatin.fragments.PermissionRequestFragment"
        android:label="PermissionRequestFragment" >
        <action
            android:id="@+id/action_permissionRequestFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="ru.newlevel.hordemap.presentatin.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <dialog
        android:id="@+id/messengerDialogFragment"
        android:name="ru.newlevel.hordemap.presentatin.fragments.MessengerDialogFragment"
        android:label="MessengerDialogFragment" >
        <action
            android:id="@+id/action_messengerDialogFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </dialog>

</navigation>