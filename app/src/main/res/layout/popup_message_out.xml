<?xml version="1.0" encoding="utf-8"?>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="@drawable/round_white"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/vector_edit"
                android:contentDescription="@string/todo"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="@string/edit"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/slate_800"
                app:elevation="0dp"
                app:textAllCaps="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/vector_delete"
                android:contentDescription="@string/todo"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:fontFamily="@font/inter_medium"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="@string/delete"
                android:textColor="@color/slate_800"
                android:textSize="16sp"
                app:elevation="0dp"
                app:textAllCaps="false" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/vector_reply"
                android:contentDescription="@string/todo"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReplyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="@string/reply"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/slate_800"
                app:elevation="0dp"
                app:textAllCaps="false" />

        </TableRow>
    </TableLayout>
