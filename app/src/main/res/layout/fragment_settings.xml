<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="450dp"
    android:layout_gravity="end"
    android:layout_marginTop="60dp"
    android:animateLayoutChanges="true"
    android:background="@drawable/rounded_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_green_dark"
        android:text="@string/settings"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginVertical="4dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:boxStrokeColor="@color/main_green_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperTextTextColor="@color/main_green_dark"
        android:textColorHint="@color/main_green_dark"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusBottomEnd="7dp"
        app:boxCornerRadiusTopEnd="7dp"
        app:boxCornerRadiusBottomStart="7dp"
        app:boxCornerRadiusTopStart="7dp"
        android:hint="@string/myName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:textColor="@color/main_green_dark"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:textColor="@color/text_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeToSenData" />

        <TextView
            android:id="@+id/tv_time_to_send_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green_dark"
            tools:text="60 sec" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <com.google.android.material.slider.Slider
            android:id="@+id/sb_timeToSendData"
            style="@style/MySliderTheme"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:contentDescription="@string/Distance"
            android:stepSize="5"
            android:value="30"
            android:valueFrom="5.0"
            android:valueTo="120.0"
            tools:ignore="DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="184dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/user_marker_size"
        android:textColor="@color/text_green_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageUserMarker"
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/img_marker_red" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sb_users_marker_size"
            style="@style/MySliderTheme"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:contentDescription="@string/Distance"
            android:stepSize="10"
            android:value="60"
            android:valueFrom="20.0"
            android:valueTo="100.0" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="223dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/statikMarkerSize"
        android:textColor="@color/text_green_dark"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCustomMarker"
            android:layout_width="0dp"
            android:layout_height="60px"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/img_marker_swords" />

        <com.google.android.material.slider.Slider
            android:id="@+id/sb_static_marker_size"
            style="@style/MySliderTheme"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:contentDescription="@string/Distance"
            android:stepSize="10"
            android:value="60"
            android:valueFrom="20.0"
            android:valueTo="100.0" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="163dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:text="@string/myMarker"
        android:textColor="@color/text_green_dark"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="460dp">

        <RadioButton
            android:id="@+id/radioButton0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:alpha="0.3"
            android:background="@drawable/img_marker_red"
            android:button="@null"
            android:tag="0"
            tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:alpha="0.3"
            android:background="@drawable/img_marker_yellow"
            android:button="@null"
            android:tag="1"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:alpha="0.3"
            android:background="@drawable/img_marker_green"
            android:button="@null"
            android:tag="2"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:alpha="0.3"
            android:background="@drawable/img_marker_blue"
            android:button="@null"
            android:tag="3"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:alpha="0.3"
            android:background="@drawable/img_marker_purple"
            android:button="@null"
            android:tag="4"
            tools:ignore="TouchTargetSizeCheck" />

    </RadioGroup>

</androidx.appcompat.widget.LinearLayoutCompat>