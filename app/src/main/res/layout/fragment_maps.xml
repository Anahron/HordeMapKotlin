<?xml version="1.0" encoding="utf-8"?>

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentatin.MainActivity">

    <ImageButton
        android:id="@+id/ib_markers"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="65dp"
        android:padding="15dp"
        android:alpha="0.6"
        android:layout_gravity="end|top"
        />
    <ImageButton
        android:id="@+id/ib_map_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/map_type_hybrid"
        android:layout_marginTop="120dp"
        android:padding="15dp"
        android:alpha="0.6"
        android:layout_gravity="end|top"
        />
    <ImageButton
        android:id="@+id/ib_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/img_settings"
        android:padding="15dp"
        android:alpha="0.6"
        android:layout_gravity="end|top"
        />

    <ImageButton
        android:id="@+id/ib_load_map"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/img_map_download"
        android:padding="15dp"
        android:alpha="0.6"
        android:layout_gravity="end|top"
        />

    </fragment>