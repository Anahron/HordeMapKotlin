<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/vector_track" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMapShowDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/show_distance"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/slate_800"
            app:elevation="0dp"
            app:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/vector_marker" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMapPutMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:fontFamily="@font/inter_medium"
            android:text="@string/put_marker"
            android:textColor="@color/slate_800"
            android:textSize="14sp"
            app:elevation="0dp"
            app:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
