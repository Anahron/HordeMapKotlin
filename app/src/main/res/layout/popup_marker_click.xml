<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tvMarkerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:breakStrategy="high_quality"
        android:ellipsize="none"
        android:maxLines="50"
        android:paddingBottom="2dp"
        android:singleLine="false"
        android:textColor="@color/main_green_dark"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linear_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:padding="4dp"
            android:textColor="@color/main_green_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:padding="4dp"
            android:textColor="@color/main_green_dark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_coordinates_gauss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:clickable="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvGaussLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:padding="4dp"
            android:textColor="@color/main_green_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvGaussRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:focusable="false"
            android:padding="4dp"
            android:textColor="@color/main_green_dark"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_weight="0"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/vector_track" />

            <TextView
                android:id="@+id/btnMarkerShowDistance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="@string/Distance"
                android:textColor="@color/main_green_dark"
                android:textSize="15sp"
                app:elevation="0dp"
                app:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"

                android:layout_marginStart="8dp"
                android:layout_weight="0"
                android:contentDescription="@string/todo"
                app:srcCompat="@drawable/vector_delete" />

            <TextView
                android:id="@+id/btnDeleteMarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="14dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="@string/delete"
                android:textColor="@color/main_green_dark"
                android:textSize="15sp"
                app:elevation="0dp"
                app:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
