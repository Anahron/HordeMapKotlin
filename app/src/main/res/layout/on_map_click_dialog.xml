<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/choose_icon"
            android:textColor="@color/main_green_dark"
            android:textSize="22sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/icon2_swords"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:background="@drawable/img_marker_swords"
                android:button="@null"
                android:tag="1"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            <RadioButton
                android:id="@+id/icon1_focus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/marker_point9"
                android:tag="10"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon3_flag_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_red"
                android:tag="2"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon4_flag_yellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_yellow"
                android:tag="3"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon5_flag_green"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_green"
                android:tag="4"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon6_flag_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_blue"
                android:tag="5"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon7_artillery"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/img_marker_artillery"
                android:tag="20"
                tools:ignore="TouchTargetSizeCheck" />


            <RadioButton
                android:id="@+id/icon7_explosion"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.5"
                android:button="@null"
                android:foreground="@drawable/img_marker_explosion"
                android:tag="21"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:hint="@string/entry_text"
            android:textColorHint="@color/main_green_dark"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusTopStart="7dp"
            app:boxStrokeColor="@color/main_green_dark"
            app:boxStrokeWidth="1dp"
            app:helperTextTextColor="@color/main_green_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textLongMessage"
                android:textColor="@color/main_green_dark" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:hint="@string/number09"
            android:textColorHint="@color/main_green_dark"
            app:boxCornerRadiusBottomEnd="7dp"
            app:boxCornerRadiusBottomStart="7dp"
            app:boxCornerRadiusTopEnd="7dp"
            app:boxCornerRadiusTopStart="7dp"
            app:boxStrokeColor="@color/main_green_dark"
            app:boxStrokeWidth="1dp"
            app:helperTextTextColor="@color/main_green_dark">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_edit_text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/main_green_dark"
                android:visibility="gone" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkBox_for_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/only_for_me"
            android:textColor="@color/slate_800" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:padding="15dp"
                android:text="@string/cancel"
                android:textColor="@color/main_green_dark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                style="?android:attr/backgroundDimEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/border_dark"
                android:padding="15dp"
                android:text="@string/put"
                android:textColor="@color/main_green" />
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>