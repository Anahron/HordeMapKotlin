<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/icon2_swords"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:background="@drawable/img_marker_swords"
                android:button="@null"
                android:tag="1" />

            <RadioButton
                android:id="@+id/icon1_focus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:foreground="@drawable/marker_point9"
                android:button="@null"
                android:tag="10" />

            <RadioButton
                android:id="@+id/icon3_flag_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:foreground="@drawable/flag_red"
                android:button="@null"
                android:tag="2" />

            <RadioButton
                android:id="@+id/icon4_flag_yellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:foreground="@drawable/flag_yellow"
                android:button="@null"
                android:tag="3" />

            <RadioButton
                android:id="@+id/icon5_flag_green"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:foreground="@drawable/flag_green"
                android:button="@null"
                android:tag="4" />

            <RadioButton
                android:id="@+id/icon6_flag_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:foreground="@drawable/flag_blue"
                android:button="@null"
                android:tag="5" />

        </RadioGroup>


    <EditText
        android:id="@+id/description_edit_text"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/entry_text" />

    <EditText
        android:id="@+id/description_edit_text_number"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/number09"
        android:inputType="number"
        android:maxLength="1"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="6dp"
            android:background="#5BD54E4E"
            android:text="@string/cancel" />

        <Button

            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="#7203A9F4"
            android:text="@string/save" />
    </LinearLayout>

</LinearLayout>
