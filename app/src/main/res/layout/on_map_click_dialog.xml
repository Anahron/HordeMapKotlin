<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choose_icon"
        android:layout_margin="8dp"
        android:textSize="22sp"/>

    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/icon2_swords"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:background="@drawable/img_marker_swords"
                android:button="@null"
                android:tag="1"
                tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

            <RadioButton
                android:id="@+id/icon1_focus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/marker_point9"
                android:tag="10"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon3_flag_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_red"
                android:tag="2"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon4_flag_yellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_yellow"
                android:tag="3"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon5_flag_green"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_green"
                android:tag="4"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/icon6_flag_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:alpha="0.3"
                android:button="@null"
                android:foreground="@drawable/flag_blue"
                android:tag="5"
                tools:ignore="TouchTargetSizeCheck" />

        </RadioGroup>


    <EditText
        android:id="@+id/description_edit_text"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="@string/entry_text"
        android:padding="12dp"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#546E7A" />

    <EditText
        android:id="@+id/description_edit_text_number"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/number09"
        android:inputType="number"
        android:maxLength="1"
        android:visibility="gone"
        android:autofillHints="" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="6dp"
            android:background="@color/cancel"
            android:text="@string/cancel"
            android:padding="15dp"
            style="?android:attr/backgroundDimEnabled" />

        <Button

            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:background="@color/accept"
            android:text="@string/put"
            android:padding="15dp"
            style="?android:attr/backgroundDimEnabled" />
    </LinearLayout>

</LinearLayout>
